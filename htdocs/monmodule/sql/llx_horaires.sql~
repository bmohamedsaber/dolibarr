-- type_horaire
--  0 : r√©gulier
--  1 : flexible

create table llx_horaires
(
  rowid              integer AUTO_INCREMENT PRIMARY KEY,
  nom_horaire        varchar(50),                  -- integer DEFAULT 1 NOT NULL,	-- multi company id
  point_ent          datetime,                 -- reference into an external system (not used by dolibarr)
  point_sort         datetime,
  type_horaire       smallint NOT NULL DEFAULT 0,
  datec              datetime,  -- date de creation
  tms                timestamp, -- date de modification
  fk_horaires_param  integer NOT NULL,
)ENGINE=innodb;
